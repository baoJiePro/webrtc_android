<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="qd_picture_BaseNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!--白色主题样式，，注意每一项都不能少-->
    <style name="qd_picture_picture.white.style" parent="qd_picture_BaseNoActionBarTheme">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/qd_base_color_ffffff</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/qd_base_color_ffffff</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/qd_base_image_common_icon_title_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/qd_base_image_ic_orange_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/qd_base_image_ic_orange_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/qd_base_color_333333</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/qd_base_color_333333</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/qd_base_image_checkbox_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/qd_base_color_ffffff</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/qd_base_image_list_sina_text_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/qd_base_image_list_sina_text_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/qd_base_image_num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/qd_base_color_ffffff</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/qd_base_color_333333</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/qd_base_image_list_sina_text_color
        </item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/qd_base_color_ffffff</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/qd_base_image_common_icon_title_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/qd_base_color_ffffff</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/qd_base_color_ffffff</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/qd_base_color_333333</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/qd_base_image_orange_oval</item>
    </style>

</resources>